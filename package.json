{
  "name": "turborepo-boilerplate",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "generate:db": "turbo run db:generate",
    "generate:push": "turbo run db:push"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
